
<% if !client_logged_in? %>
  <a href="/sessions/new">LOG IN</a>
<% end %>


<div class="core_info">
  <div>name:  <span><%=current_client.name%></span></div>
  <div>email:  <span><%=current_client.email%></div>
  <div>mobile number:  <span><%=current_client.mobile_number%></div>
  <img src= "<%=current_client.img_url%>"/>
</div>

<div class="secondary_info">
  <div>street address:  <span><%=current_client.street_address%></div>
  <div>suburb:  <span><%=current_client.suburb%></div>
  <div>postcode:  <span><%=current_client.postcode%></div>
  <div>about me:  <span><%=current_client.bio%></div>
  <div>host: <span><%=current_client.host%></div>
</div>

<div class="child_info">
  children: <span><%=current_client.children%></span>
  Age Groups
    <ul>0 - 1<%=current_client.children_age_0to1%></ul>
    <ul>2 - 3<%=current_client.children_age_2to3%></ul>
    <ul>4 - 5<%=current_client.children_age_4to5%></ul>
    <ul>6 - 8<%=current_client.children_age_6to8%></ul>
    <ul>9 - 12<%=current_client.children_age_9to11%></ul>
    <ul>12+<%=current_client.children_age_12plus%></ul>
</div>

<div class="search_info">
  <form action="/client" method="post">
    <label>Find Carers Near</label>
    <input type="text" name="aupair_search" value="<%=current_client.suburb %>">
    <button>Go</button>
  </form>
</div>
