<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Share Au Pair</title>
  <link rel='stylesheet' href='/stylesheets/main.css'>
</head>
<body>
  <h1>ShareAupair</h1>
  <h2>Childcare the works for you</h2>

  <% if client_logged_in?%>
    LOGGED IN AS <%=current_client.name%>
      <a href="/client">Profile</a>
      <a href="/">Home</a>
      <form class="" action="/session" method="post">
        <input type="hidden" name="_method" value="delete">
        <button>LOG OUT</button>
      </form>
    <%end%>

  <% if carer_logged_in?%>
    LOGGED IN AS <%=current_carer.name%>
      <a href="/carer">Profile</a>
      <a href="/">Home</a>
      <form class="" action="/session" method="post">
        <input type="hidden" name="_method" value="delete">
        <button>LOG OUT</button>
      </form>
    <%end%>

  session: <%= session[:client_id] || session[:carer_id]%>

  <%= yield %>

</body>
